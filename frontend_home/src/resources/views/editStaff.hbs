<div class="container-fluid">
    <div class="row">
        <div class="col-2 p-0">
            <!-- Sidebar content here -->
            {{>sidebar}}
        </div>
        <div class="col-10">
            <div id="right" class="right">
            </div>
            <div class="col-6 mx-auto " style="margin-top: 30px ;width: 50%;">
                <h1 class="">Thông tin nhân viên {{staff.fullname}}</h1>
                <form action="/staff/update/{{staff._id}}" method="post" class="needs-validation">
                    <div class="form-group">
                        <label for="username">Tên đăng nhập</label>
                        <input class="form-control" placeholder="Tên đăng nhập" id="username" name="username"
                               value="{{staff.username}}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" placeholder="Nhập Tên nhân viên" id="email" name="email"
                               value="{{staff.email}}" readonly>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Họ và tên</label>
                        <input class="form-control" placeholder="Nhập Họ nhân viên" id="fullname" name="fullname"
                               value="{{staff.fullname}}">
                    </div>
                    <div class="form-group">
                    </div>
                    <button type="submit" name="submit" class="btn btn-success"
                            style="margin-top: 15px; margin-left: 35%">Sửa
                    </button>
                    <a href="/staff/default_password/{{staff._id}}" class="btn btn-success" style="margin-top: 15px;">Khôi
                        phục mật khẩu</a>
                </form>
            </div>
        </div>
    </div>
</div>