<div class="container-fluid">
    <div class="row">
        <div class="col-2 p-0">
            <!-- Sidebar content here -->
            {{>sidebar}}
        </div>
        <div class="col-10">
            <div id="right" class="right">
            </div>
            <div class="col-6 mx-auto " style="margin-top: 30px ;width: 50%;">
                <h1 class="">Thông tin nhân viên {{profile.lastname}} {{profile.firstname}}</h1>
                <form action="/profile/update/{{profile._id}}" method="post" class="needs-validation">
                    <div class="form-group">
                        <label for="username">Tên đăng nhập</label>
                        <input class="form-control" placeholder="Tên đăng nhập" id="username" name="username"
                               value="{{profile.username}}" readonly disabled>
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" placeholder="Nhập Tên nhân viên" id="email" name="email"
                               value="{{profile.email}}" readonly disabled>
                    </div>

                    <div class="form-group">
                        <label for="fullname">Họ và tên</label>
                        <input class="form-control" placeholder="Nhập Tên nhân viên" id="fullname" name="fullname"
                               value="{{profile.fullname}}">
                    </div>
                    <div class="form-group">
                    </div>
                    <button type="submit" name="submit" class="btn btn-success" style="margin-top: 15px;">Sửa</button>
                    <a href="/profile/get_change_password/{{profile._id}}" class="btn btn-success" style="margin-top: 15px;">Đổi mật khẩu</a>
                </form>
            </div>
        </div>
    </div>
</div>